generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PredictionEvent {
  id          Int                @id @default(autoincrement())
  userId      Int
  description String
  endTime     DateTime
  createdAt   DateTime           @default(now())
  answers     PredictionAnswer[]
  author      User               @relation(fields: [userId], references: [id])
}

model PredictionAnswer {
  id                Int               @id @default(autoincrement())
  description       String
  isCorrect         Boolean           @default(false)
  balance           String
  typeBalance       String
  predictionEventId Int
  predictionEvent   PredictionEvent   @relation(fields: [predictionEventId], references: [id], onDelete: Cascade)
  voteTransactions  VoteTransaction[]
}

model User {
  id               Int               @id @default(autoincrement())
  username         String
  address          String            @unique()
  predictionEvents PredictionEvent[]
  votes            VoteTransaction[]
}

model Otp {
  id      Int    @id @default(autoincrement())
  address String
  value   String
}

model VoteTransaction {
  id               Int              @id @default(autoincrement())
  answerId         Int
  userId           Int
  amount           Int
  signedContractId String
  createdAt        DateTime         @default(now())
  user             User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  answer           PredictionAnswer @relation(fields: [answerId], references: [id], onDelete: Cascade)
}
